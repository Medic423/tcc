# TCC Development Server Monitoring Configuration
# This file allows you to customize the health monitoring behavior

# Health check interval in seconds (default: 60)
HEALTH_CHECK_INTERVAL=60

# Maximum number of restart attempts before giving up (default: 5)
MAX_RESTARTS=5

# Backend health check URL (default: http://localhost:5001/health)
BACKEND_HEALTH_URL=http://localhost:5001/health

# Frontend health check URL (default: http://localhost:3000)
FRONTEND_HEALTH_URL=http://localhost:3000

# Wait time between restart attempts in seconds (default: 10)
RESTART_DELAY=10

# Enable verbose logging (true/false)
VERBOSE_LOGGING=false

# Enable email notifications on failure (requires mail command)
ENABLE_EMAIL_NOTIFICATIONS=true
NOTIFICATION_EMAIL="chuck41090@mac.com"

# Custom health check commands (optional)
# BACKEND_HEALTH_CMD="curl -s http://localhost:5001/health"
# FRONTEND_HEALTH_CMD="curl -s http://localhost:3000"
